<?xml version="1.0"?>

<!-- Game settings -->

<settings>
  <game name="Top Down Game Prototype" />
  <renderer width="1280" height="720"/>
   
  <font file="Media\Fonts\Helvetica_16.spritefont"/>

  <!-- sprites -->
   
  <sprites path="Media\Images">
    <sprite name="floor" file="floor.png"/>
      

    <sprite name="crosshair" file="crosshair.png"/>
    <sprite name="turret" file="turret.png"/>
    <sprite name="bullet" file="bullet.png"/>
    <sprite name="bullet2" file="bullet2.png"/>
    <sprite name="smoke" file="graysmoke.png"/>
    <sprite name="spark" file="spark.png"/>
    <sprite name="gameover" file="gameover.png"/>

	<sprite name="runmanSheet" file="RunnerEnemySheet.png"/>
    <sprite name="runman" sheet="runmanSheet" frames="2">
        <frame index="0" left="0" top="0" right="80" bottom="116"/>
        <frame index="1" left="80" top="0" right="160" bottom="116"/>
    </sprite>

    <sprite name="cheerleaderSheet" file="cheerleader.png"/>
    <sprite name="cheerleader" sheet="cheerleaderSheet" frames="2">
      <frame index="0" left="0" top="0" right="69" bottom="100"/>
      <frame index="1" left="69" top="0" right="138" bottom="100"/>
    </sprite>

    <sprite name="shooterSheet" file="shooter.png"/>
    <sprite name="shooter" sheet="shooterSheet" frames="2">
      <frame index="0" left="0" top="0" right="43" bottom="100"/>
      <frame index="1" left="43" top="0" right="86" bottom="100"/>
    </sprite>

    <sprite name="playerSheet" file="PlayerSheet.png"/>
    <sprite name="player" sheet="playerSheet" frames="2">
      <frame index="0" left="0" top="0" right="83" bottom="128"/>
      <frame index="1" left="83" top="0" right="166" bottom="128"/>
    </sprite>

	<sprite name="cheerleader" file="cheerleader.png"/>
	<sprite name="promqueen" file="promqueen.png"/>
	<sprite name="footballer" file="footballer.png"/>
	
	<sprite name="dummy" file="dummy.png"/>
	<sprite name="healthbarrd" file="healthbarrd.png"/>
	<sprite name="healthbargr" file="healthbargr.png"/>
    <sprite name="ShopCard_Damage_1" file="ShopCard_Damage_1.png"/>
    <sprite name="ShopCard_Blank" file="ShopCard_Blank.png"/>
  </sprites>

  <!-- sound -->
  
  <sounds  path="Media\Sounds">
    <sound name="gun" file="44magnum.wav" instances="8"/>
    <sound name="ricochet" file="ricochet.wav" instances="8"/>
    <sound name="clang" file="clang.wav" instances="4"/>
    <sound name="grunt" file="umph.wav" instances="4"/>
  </sounds>
</settings>
